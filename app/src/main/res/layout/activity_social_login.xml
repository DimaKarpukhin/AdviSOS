<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivitySocialLogin"
    android:background="@drawable/background_transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/choose_an_account"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="italic" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/hidden_facebook_btn"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_google_login"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <com.shaishavgandhi.loginbuttons.FacebookButton
            android:id="@+id/btn_facebook_login"
            android:layout_above="@id/btn_google_login"
            android:layout_width="278dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:text="Facebook"
            android:textSize="14sp"
            app:iconCenterAligned="false"
            app:iconPadding="0dp"
            app:roundedCorner="true"
            app:roundedCornerRadius="2dp" />

        <com.shobhitpuri.custombuttons.GoogleSignInButton
            android:id="@+id/btn_google_login"
            android:layout_width="285dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_rect_white_pressed_blue_transparent"
            android:text="GOOGLE          "
            app:isDarkTheme="false" />
    </RelativeLayout>

</RelativeLayout>