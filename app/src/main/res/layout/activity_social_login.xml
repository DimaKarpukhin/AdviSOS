<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivitySocialLogin"
    android:background="@drawable/background_with_high_transparency">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_social_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@+id/tool_bar_social_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <!--<ImageView-->
            <!--android:id="@+id/img_advisos"-->
            <!--android:layout_width="200dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_margin="50dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:src="@drawable/logo_advisos"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/choose_an_account"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="italic" />

        <com.shaishavgandhi.loginbuttons.FacebookButton
            android:id="@+id/btn_facebook_login"
            android:layout_above="@id/btn_google_login"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="      Facebook"
            android:textSize="14sp"
            app:iconCenterAligned="false"
            app:iconPadding="0dp"
            app:roundedCorner="true"
            app:roundedCornerRadius="2dp"/>

        <com.shobhitpuri.custombuttons.GoogleSignInButton
            android:id="@+id/btn_google_login"
            android:layout_width="280dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="150dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="@string/google"
            app:isDarkTheme="false" />
    </RelativeLayout>

</RelativeLayout>