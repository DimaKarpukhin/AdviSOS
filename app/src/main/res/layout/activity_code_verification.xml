<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityCodeVerification"
    android:background="@drawable/background_with_high_transparency">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/sms_code_msg"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="italic"/>

        <com.goodiebag.pinview.Pinview
            android:id="@+id/picker_of_code_verification"
            android:layout_above="@id/btn_next_of_code_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:pinWidth="34dp"
            app:pinHeight="34dp"
            app:pinLength="6"
            app:cursorVisible="true"
            app:forceKeyboard="true"
            app:inputType="number">
        </com.goodiebag.pinview.Pinview>

        <ImageButton
            android:id="@+id/btn_next_of_code_verification"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="280dp"
            android:layout_marginRight="4dp"
            android:layout_alignEnd="@+id/picker_of_code_verification"
            android:background="@drawable/design_btn_round_blue"
            android:src="@drawable/ic_arrow_forward_white_24dp" />

        <TextView
            android:id="@+id/link_resend_code"
            android:layout_below="@id/picker_of_code_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="@string/resend_code"
            android:background="@drawable/design_link_rectangle_grey"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="italic"/>
    </RelativeLayout>

</RelativeLayout>