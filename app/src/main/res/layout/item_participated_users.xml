<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:background="@color/blueLight">

        <RelativeLayout
            android:id="@+id/layout_image_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_participated_user"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_profile_picture" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_toEndOf="@+id/layout_image_user"
            android:layout_width="match_parent"
            android:layout_height="74.5dp"
            android:layout_alignParentEnd="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_toLeftOf="@+id/layout_rating_of_user"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:layout_marginEnd="5dp"
                android:text="User name"
                android:textStyle="italic"/>

            <LinearLayout
                android:id="@+id/layout_rating_of_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                >

                <ImageView
                    android:id="@+id/img_star_of_item_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_star"/>

                <TextView
                    android:id="@+id/txt_rate_mark_of_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:layout_marginEnd="5dp"
                    android:text="4.8"
                    android:textStyle="italic"/>

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>