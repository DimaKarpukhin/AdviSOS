<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_transparent"
    tools:context=".Activities.ActivityUserRatingBySubjects">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/layout_of_user_rating_by_subjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_of_user_rating_by_subjects"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black"
            android:backgroundTint="@color/blue"
            android:elevation="4dp"
            app:navigationIcon="@drawable/ic_arrow_back_white"
            app:buttonGravity="bottom"
            app:title="AdviSOS"
            app:titleTextColor="@color/white">
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_of_activity_user_rating_by_subjects"
        android:layout_below="@+id/layout_of_user_rating_by_subjects"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>