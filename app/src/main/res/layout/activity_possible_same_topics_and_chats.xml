<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_possible_chats_and_topics"
    tools:context=".Activities.ActivityPossibleSameTopicsAndChats"
    tools:openDrawer="start"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/layout_possible_chats_topics_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar_layout_of_possible_chats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">
               <androidx.appcompat.widget.Toolbar
                 android:id="@+id/toolbar_of_possibleChats"
                 android:layout_width="match_parent"
                 android:layout_height="?attr/actionBarSize"
                 android:background="@color/black"
                 android:backgroundTint="@color/blue"
                 android:elevation="4dp"
                 app:navigationIcon="@drawable/ic_arrow_back_white"
                 app:buttonGravity="bottom"
                 app:title="AdviSOS"
                 app:titleTextColor="@color/white">
                <TextView
                    android:id="@+id/btn_create_new_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Create new chat room"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:background="@drawable/btn_rect_white_pressed_blue_transparent">

                </TextView>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs_of_possible_chats_and_topics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_bar_layout_of_possible_chats"
                android:background="@color/transparent"
                app:tabTextColor="@color/blueLight"
                app:tabSelectedTextColor="@color/white"
                app:tabIndicatorColor="@color/white"
                app:tabMode="fixed"
                app:tabGravity="center"/>

        </RelativeLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_of_possible_chats_and_topics"
            android:layout_below="@+id/layout_possible_chats_topics_app_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_transparent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>

